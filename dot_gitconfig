[user]
	useConfigOnly = true
	name = 
	email = 

[core]
	editor = nvim
  pager = delta
    
[init]
	defaultBranch = main

; [pager]
  ; difftool = true

[interactive]
  diffFilter = delta --color-only --features=interactive

[push]
	autoSetupRemote = true

[diff]
  ; tool = nvimdiff
  tool = difftastic

[difftool]
  prompt = false

[merge]
  tool = smerge
  conflictstyle = diff3

[delta]
  features = decorations
  paging = never
  ; side-by-side = true
  ; light = true

[delta "interactive"]
  keep-plus-minus-markers = false

[delta "decorations"]
  commit-decoration-style = auto ol
  file-style = omit
  hunk-header-decoration-style = auto box
  hunk-header-file-style = auto
  hunk-header-line-number-style = auto
  hunk-header-style = file line-number syntax

[difftool "delta"]
	cmd = delta --color-only --features=interactive

[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"

[mergetool "nvimdiff"]
  path = nvim
  conflictstyle = diff3
  colorMoved = default

[mergetool "smerge"]
  cmd = smerge mergetool "$BASE" "$LOCAL" "$REMOTE" -o "$MERGED"
  trustExitCode = true
