[user]
	useConfigOnly = true

[core]
	editor = nvim
    pager = delta
    
[init]
	defaultBranch = main

[commit]
    template = ~/.gitcommit

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    light = true

[diff]
    tool = smerge

[merge]
    tool = smerge

[mergetool "smerge"]
	cmd = smerge mergetool \"$BASE\" \"$LOCAL\" \"$REMOTE\" -o \"$MERGED\"
	trustExitCode = true
