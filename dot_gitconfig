[merge]
  tool = smerge
  conflictstyle = diff3

[mergetool "nvimdiff"]
  path = nvim
  conflictstyle = diff3
  colorMoved = default

[mergetool "smerge"]
  cmd = smerge mergetool "$BASE" "$LOCAL" "$REMOTE" -o "$MERGED"
  trustExitCode = true
