# general
alias ..="j .."
alias ...="j ../.."

alias nv="nvim"
alias nvd="neovide --fork --no-tabs"

alias kt="klog print --with-totals --today"
alias ky="klog print --with-totals --yesterday"

# git
alias lg="lazygit"
alias gs="git status"
alias ga="git add"
alias gc="git commit"
alias gp="git push"
alias gpa="git push --all"
alias gpl="git pull"
alias gpla="git pull --all"

# files
alias cat="bat"
alias df="duf"
alias rs="rsync -axHAWXS --numeric-ids --info=progress2"

# exa
alias ls='eza'                                                         # ls
alias l='eza -lbhF --git'                                               # list, size, type, git
alias lm='eza -lbhF --git --sort=modified'                            # long list, modified date sort
alias ll='eza -lbhHgUma --time-style=long-iso --git --color-scale'  # all list
alias lx='eza -lbhHgUma@ --time-style=long-iso --git --color-scale' # all + extended list
alias lS='eza -1'                                                      # one column, just names
alias lt='eza --tree --level=2'

# brew
alias brew-uses="brew uses --installed"
