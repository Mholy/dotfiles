# general
alias ..="j .."
alias ...="j ../.."

alias nv="nvim"
alias nvd="neovide --fork --no-tabs"

alias kt="klog print --with-totals --today"
alias ky="klog print --with-totals --yesterday"
alias kw="klog print --with-totals --this-week"
alias kc="klog today --now --follow"

# git
alias lg="lazygit"
alias gs="git status"
alias ga="git add"
alias gc="git commit"
alias gp="git push"
alias gpa="git push --all"
alias gpl="git pull"
alias gpla="git pull --all"

# files
alias cat="bat"
alias df="duf"
alias rs="rsync -axHAWXS --numeric-ids --info=progress2"

# eza
alias ls='eza --group-directories-first --git' # ls
alias l='ls --header' # list, size, type, git
alias ll='ls --header --all --color-scale' # all list

# brew
alias brew-uses="brew uses --installed"

# npm
alias ncu="ncu -i --format group"
alias ncu-minor="ncu --target minor"
alias ncu-prod="ncu --dep prod"

# jless
alias yless="jless --yaml"

# jj
alias jjui="export DEBUG= && jjui"
