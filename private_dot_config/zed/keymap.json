[
  {
    "context": "GitPanel || ProjectPanel || CollabPanel || OutlinePanel || ChatPanel || VimControl || EmptyPane || SharedScreen || MarkdownPreview || KeyContextView || AgentPanel",
    "bindings": {
      // window related commands (ctrl-w X)
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown"
    }
  },
  {
    "context": "vim_mode == insert",
    "bindings": {
      "ctrl-x ctrl-e": "editor::ToggleEditPrediction",
      "ctrl-x ctrl-n": "editor::NextEditPrediction",
      "ctrl-x ctrl-p": "editor::PreviousEditPrediction"
    }
  },
  {
    "context": "Editor && edit_prediction",
    "bindings": {
      "ctrl-j": "editor::AcceptPartialEditPrediction"
    }
  },
  {
    "context": "vim_mode == normal || vim_mode == visual",
    "bindings": {
      "s": "vim::PushSneak",
      "shift-s": "vim::PushSneakBackward"
    }
  },
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "H": "project_panel::CollapseAllEntries"
    }
  }
  // {
  //   "context": "Editor && vim_mode == normal && (vim_operator == none || vim_operator == n) && !VimWaiting",
  //   "bindings": {
  //     "space l g": ["task::Spawn", { "task_name": "Lazygit" }]
  //   }
  // }
]
