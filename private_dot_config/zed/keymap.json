[
  {
    "use_key_equivalents": true,
    "bindings": {
      "ctrl-Z u +": "zed::IncreaseUiFontSize",
      "ctrl-Z u -": "zed::DecreaseUiFontSize",
      "ctrl-Z u 0": "zed::ResetUiFontSize",
      "ctrl-Z b +": "zed::IncreaseBufferFontSize",
      "ctrl-Z b -": "zed::DecreaseBufferFontSize",
      "ctrl-Z b 0": "zed::ResetBufferFontSize",
      "cmd-0": ["workspace::SendKeystrokes", "ctrl-Z u 0 ctrl-Z b 0"],
      "cmd-=": ["workspace::SendKeystrokes", "ctrl-Z u + ctrl-Z b +"],
      "cmd-+": ["workspace::SendKeystrokes", "ctrl-Z u + ctrl-Z b +"],
      "cmd--": ["workspace::SendKeystrokes", "ctrl-Z u - ctrl-Z b -"]
    }
  },
  {
    "context": "AgentPanel || GitPanel || ProjectPanel || CollabPanel || OutlinePanel || ChatPanel || VimControl || EmptyPane || SharedScreen || MarkdownPreview || KeyContextView || DebugPanel || Dock",
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown"
    }
  },
  {
    "context": "Editor && edit_prediction",
    "bindings": {
      "shift-enter": "editor::AcceptPartialEditPrediction",
      "ctrl-x ctrl-.": "editor::NextEditPrediction",
      "ctrl-x ctrl-,": "editor::PreviousEditPrediction"
    }
  },
  {
    "context": "Editor && edit_prediction_conflict",
    "use_key_equivalents": true,
    "bindings": {
      "shift-enter": "editor::AcceptPartialEditPrediction"
    }
  },
  {
    "context": "vim_mode == normal || vim_mode == visual",
    "bindings": {
      "s": "vim::PushSneak",
      "shift-s": "vim::PushSneakBackward"
    }
  },
  {
    "context": "vim_mode == visual",
    "bindings": {
      "shift-s": "vim::PushAddSurrounds",
      "shift-x": "vim::Exchange"
    }
  },
  {
    "context": "vim_operator == a || vim_operator == i || vim_operator == cs",
    "bindings": {
      // Traditional Vim behavior
      // "q": "vim::AnyQuotes",
      // "b": "vim::AnyBrackets",
      // mini.ai plugin behavior
      "q": "vim::MiniQuotes",
      "b": "vim::MiniBrackets"
    }
  },
  {
    "context": "vim_mode == normal",
    "bindings": {
      "] d": [
        "editor::GoToDiagnostic",
        {
          "severity": {
            "min": "warning",
            "max": "error"
          }
        }
      ],
      "[ d": [
        "editor::GoToPreviousDiagnostic",
        {
          "severity": {
            "min": "warning",
            "max": "error"
          }
        }
      ]
    }
  },
  {
    "context": "Workspace",
    "use_key_equivalents": true,
    "bindings": {
      "ctrl-g ctrl-g": [
        "task::Spawn",
        {
          "task_name": "Lazygit"
        }
      ],
      "ctrl-g ctrl-j": [
        "task::Spawn",
        {
          "task_name": "Jujutsu"
        }
      ]
    }
  }
]
